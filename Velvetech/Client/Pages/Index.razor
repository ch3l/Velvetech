@page "/"
@using Velvetech.Shared
@using Velvetech.Shared.Wrappers
@inject HttpClient Http

<h1>Students</h1>

@if (students == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Full name</th>
				<th>Callsign</th>
				<th>Groups</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var student in students)
			{
				<tr>
					<td>@student.FullName</td>
					<td>@student.Callsign</td>
					<td>@(string.Join(", ", student.Groups))</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	private IEnumerable<StudentWrapper> students;

	protected override async Task OnInitializedAsync()
	{
		students = await Http.GetFromJsonAsync<IEnumerable<StudentWrapper>>("api/Students?groupname=fir&sex=male&callsign=1&fullname=2");
	}
}